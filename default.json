{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "automerge": true,
  "packageRules": [
    {
      "groupName": "minor and patch dependencies",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "ignorePaths": [
        "helm/**"
      ],
      "automerge": true
    },
    {
      "groupName": "helm values",
      "matchManagers": [
        "helm-values"
      ],
      "managerFilePatterns": [
        "/helm/.+\\.ya?ml$/"
      ]
    }
  ]
}
