{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "minor and patch dependencies",
      "automerge": true
    }
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/helm/.+\\.yaml$/"
    ]
  }
}
