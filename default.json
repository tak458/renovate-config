{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe"
  ],
  "ignorePresets": [
    "packages:jsUnitTest"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 11am and before 5pm every weekday"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "minor and patch updates for linter and formatter",
      "matchPackageNames": [
        "/eslint/",
        "/prettier/"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "groupName": "test",
      "extends": [
        "packages:jsUnitTest"
      ],
      "matchPackageNames": [
        "/^@testing-library/",
        "/vitest/",
        "@vitejs/plugin-react"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "groupName": "node-fetch",
      "matchPackageNames": [
        "node-fetch",
        "@types/node-fetch"
      ]
    }
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/helm/.+\\.yaml$/"
    ]
  }
}
