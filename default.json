{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies",
    ":automergeMinor"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "* * * * 2,3"
  ],
  "packageRules": [
    {
      "groupName": "minor and patch dependencies",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "ignorePaths": [
        "helm/**"
      ],
      "automerge": true
    },
    {
      "groupName": "helm chart",
      "matchManagers": [
        "helmv3",
        "helm-values"
      ],
      "bumpVersions": [
        {
          "filePatterns": [
            "{{packageFileDir}}/Chart.{yaml,yml}"
          ],
          "matchStrings": [
            "version:\\s(?<version>[^\\s]+)"
          ],
          "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
        }
      ]
    }
  ]
}
