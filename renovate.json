{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "docker:disableMajor"
  ],
  "ignorePresets": [
    "monorepo:react",
    "packages:linters",
    "packages:jsUnitTest"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "react monorepo",
      "extends": [
        "monorepo:react"
      ],
      "matchPackagePrefixes": [
        "@types/react"
      ]
    },
    {
      "groupName": "linters and formatters",
      "extends": [
        "packages:linters"
      ],
      "matchPackageNames": [
        "prettier",
        "eslint-config-next"
      ]
    },
    {
      "groupName": "test",
      "extends": [
        "packages:jsUnitTest"
      ],
      "matchPackagePrefixes": [
        "@testing-library/"
      ]
    },
    {
      "groupName": "node-fetch",
      "matchPackageNames": [
        "node-fetch",
        "@types/node-fetch"
      ]
    }
  ]
}
