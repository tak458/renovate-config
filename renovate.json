{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "group:definitelyTyped",
    "docker:disableMajor",
    ":disableDependencyDashboard"
  ],
  "supportPolicy": [
    "lts_latest"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "weekend"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "groupName": "nestjs monorepo",
      "extends": [
        "monorepo:nest"
      ],
      "matchPackagePrefixes": [
        "^@nestjs/"
      ]
    },
    {
      "groupName": "linters and formatters",
      "extends": [
        "group:linters"
      ],
      "matchPackageNames": [
        "prettier",
        "eslint-config-next"
      ]
    },
    {
      "groupName": "test",
      "extends": [
        "packages:jsUnitTest"
      ],
      "matchPackagePrefixes": [
        "^@testing-library/"
      ]
    },
    {
      "groupName":"node-fetch",
      "matchPackageNames":[
        "node-fetch",
        "@types/node-fetch"
      ]
    }
  ]
}
