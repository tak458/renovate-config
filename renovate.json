{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "group:definitelyTyped",
    "docker:disableMajor"
  ],
  "supportPolicy": [
    "lts_latest"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "groupName": "linters and formatters",
      "extends": [
        "group:linters"
      ],
      "matchPackageNames": [
        "prettier"
      ]
    },
    {
      "groupName": "test",
      "extends": [
        "packages:jsUnitTest"
      ],
      "matchPackagePrefixes": [
        "^@testing-library/"
      ]
    }
  ]
}
