{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "docker:disableMajor",
    ":preserveSemverRanges"
  ],
  "ignorePresets": [
    "monorepo:nest",
    "packages:linters",
    "packages:jsUnitTest"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "groupName": "nestjs monorepo",
      "extends": [
        "monorepo:nest"
      ],
      "matchPackagePrefixes": [
        "@nestjs/"
      ]
    },
    {
      "groupName": "linters and formatters",
      "extends": [
        "packages:linters"
      ],
      "matchPackageNames": [
        "prettier",
        "eslint-config-next"
      ]
    },
    {
      "groupName": "test",
      "extends": [
        "packages:jsUnitTest"
      ],
      "matchPackagePrefixes": [
        "@testing-library/"
      ]
    },
    {
      "groupName": "node-fetch",
      "matchPackageNames": [
        "node-fetch",
        "@types/node-fetch"
      ]
    }
  ]
}
