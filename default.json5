{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe"
  ],
  "ignorePresets": [
    "packages:jsUnitTest"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 5pm and before 8pm every weekday"
    // "on the 27th through 31th day of the month"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "test",
      "extends": [
        "packages:jsUnitTest"
      ],
      "matchPackagePrefixes": [
        "@testing-library/"
      ]
    },
    {
      "groupName": "node-fetch",
      "matchPackageNames": [
        "node-fetch",
        "@types/node-fetch"
      ]
    }
  ]
}
